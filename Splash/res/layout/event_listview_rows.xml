<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photo_layout"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@null"
    tools:context=".MainActivity" >
    
<ImageView
        android:id="@+id/i"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingTop="3dp"
        android:paddingRight="20dp"
        android:focusable="false"
        android:scaleType="fitXY"
        android:background="@drawable/vid_cell_bg"/>

    <TextView
        android:id="@+id/ndp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton1"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:text="NDPPeeps"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_alignRight="@+id/i"
        android:layout_below="@+id/date"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="26dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="2"
        android:text="NDP  2013"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />
     
     <RelativeLayout  
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:focusable="false"
        android:visibility="gone"
        android:focusableInTouchMode="false"
         > 
     </RelativeLayout>

     <ImageView
         android:id="@+id/imageButton1"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_alignParentLeft="true"  
         android:layout_alignTop="@+id/i"
         android:layout_marginLeft="5dp"   
         android:layout_marginTop="17dp"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:src="@drawable/ndphomepage" />

     <TextView
         android:id="@+id/event_item_subtitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/ndp"
         android:layout_toRightOf="@+id/imageButton1"
         android:focusable="false"
         android:layout_marginLeft="10dp"
         android:focusableInTouchMode="false"
         android:text="date here"
         android:textColor="#ffffff"
         android:visibility="invisible"
         android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>