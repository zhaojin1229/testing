<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sponsors_bg"
     >
    <ImageView 
    android:layout_width="match_parent"
    android:layout_height="40dp" 
    android:id="@+id/asd"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/asd"
        android:padding="40dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sponsors"
            
             />

        <ImageView
            android:id="@+id/mibutton"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:background="#00000000"
            android:text="Button" />

        <ImageView
            android:id="@+id/qybutton"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_above="@+id/mibutton"
            android:layout_alignLeft="@+id/mibutton"
            android:layout_marginBottom="62dp"
            android:background="#00000000"
            android:text="Button" />

    </RelativeLayout>

</RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/head_layout"
        android:background="#00000000" >

        <Button
            android:id="@+id/showLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:text="ShowLeft" />

        <Button
            android:id="@+id/showRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/menu_btn" />
        
    </RelativeLayout>

    

</FrameLayout>
